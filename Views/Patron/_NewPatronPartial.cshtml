@using Ticketr.Models;
@model Patron;
<div>
    <h3>Add a new Patron</h3>
    <form asp-controller="Patron" asp-action="CreateNewPatron" method="Post">
        <span asp-validation-for="FirstName"></span>
        </br>
        <label asp-for="FirstName"></label>
        <span>: (required)</span>
        </br>
        <input asp-for="FirstName">
        </br>
        <span asp-validation-for="LastName"></span>
        </br>
        <label asp-for="LastName"></label>
        <span>: (required)</span>
        </br>
        <input asp-for="LastName">
        </br>
        <span asp-validation-for="Address"></span>
        </br>
        <label asp-for="Address"></label>
        <span>: (required)</span>
        </br>
        <input asp-for="Address">
        </br>
        <span asp-validation-for="PhoneNumber"></span>
        <span asp-validation-for="PhoneNumberType"></span>
        </br>
        <label asp-for="PhoneNumber"></label>
        <span>: (required)</span>
        </br>
        <input asp-for="PhoneNumber">
        <select asp-for="PhoneNumberType">
            <option value="Home">Home</option>
            <option value="Work">Work</option>
            <option value="Cell">Cell</option>
        </select>
        </br>
        <span asp-validation-for="DateOfBirth"></span>
        </br>
        <label asp-for="DateOfBirth"></label>
        <span>: (required)</span>
        </br>
        <input asp-for="DateOfBirth">
        </br>
        <span asp-validation-for="Email"></span>
        </br>
        <label asp-for="Email"></label>
        <span>: </span>
        </br>
        <input asp-for="Email">
        </br>
        <span asp-validation-for="FaxNumber"></span>
        </br>
        <label asp-for="FaxNumber"></label>
        <span>: </span>
        </br>
        <input asp-for="FaxNumber">
        </br>
        <span asp-validation-for="Website"></span>
        </br>
        <label asp-for="Website"></label>
        <span>: </span>
        </br>
        <input asp-for="Website">
        </br>
        <span asp-validation-for="SubscriptionModule"></span>
        </br>
        <label asp-for="SubscriptionModule"></label>
        <span>: </span>
        </br>
        <input asp-for="SubscriptionModule">
        </br>
        <label asp-for="IsMilitary"></label>
        <span>: </span>
        <input asp-for="IsMilitary">
        </br>
        <label asp-for="IsStudent"></label>
        <span>: </span>
        <input asp-for="IsStudent">
        </br>
        <input type="submit" value="Add New Patron">
    </form>
</div>