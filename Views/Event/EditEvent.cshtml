@model Event
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="BackgroundWrapper">
        <div class="InnerWrapper">
            <p><a asp-controller="Home" asp-action="Dashboard">Dashboard</a> | <a asp-action="ViewAll" asp-controller="Event">View all events</a> </p>
            <div>
                <h3>Create a new Event</h3>
                <form asp-action="UpdateEvent" asp-controller="Event" method="post" asp-route-EventId="@Model.EventId">
                    <span asp-validation-for="EventCode"></span>
                    </br>
                    <label asp-for="EventCode"></label>
                    <span>: </span>
                    </br>
                    <input asp-for="EventCode">
                    </br>
                    <span asp-validation-for="EventName"></span>
                    </br>
                    <label asp-for="EventName"></label>
                    <span>: </span>
                    </br>
                    <input asp-for="EventName">
                    </br>
                    <span asp-validation-for="PriceMap"></span>
                    </br>
                    <label asp-for="PriceMap"></label>
                    <span>: </span>
                    <select asp-for="PriceMap">
                        <option value="High">High</option>
                        <option value="Normal">Normal</option>
                        <option value="Low">Low</option>
                    </select>
                    </br>
                    <span asp-validation-for="StartDate"></span>
                    </br>
                    <label asp-for="StartDate"></label>
                    <span>: </span>
                    </br>
                    <input asp-for="StartDate">
                    </br>
                    <span asp-validation-for="EndDate"></span>
                    </br>
                    <label asp-for="EndDate"></label>
                    <span>: </span>
                    </br>
                    <input asp-for="EndDate">
                    </br>
                    </br>
                    <input type="submit" value="Update Event">
                </form>

            </div>
        </div>
    </div>
</body>
</html>